<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="@dimen/modify_scores_dialog_margin"
        android:id="@+id/team_one_modify_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_one_decrement"
            style="@style/modify_score_operator_team_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decrement_text"/>

        <TextView
            android:id="@+id/team_one_score_view"
            style="@style/modify_score_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/modify_scores_dialog_margin"
            android:layout_marginStart="@dimen/modify_scores_dialog_margin"
            android:textColor="@color/teamOne"/>

        <TextView
            android:id="@+id/team_one_increment"
            style="@style/modify_score_operator_team_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/modify_scores_dialog_margin"
            android:layout_marginStart="@dimen/modify_scores_dialog_margin"
            android:text="@string/increment_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/team_one_modify_score"
        android:layout_marginTop="@dimen/modify_scores_dialog_margin"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_two_decrement"
            style="@style/modify_score_operator_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decrement_text"/>

        <TextView
            android:id="@+id/team_two_score_view"
            style="@style/modify_score_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/modify_scores_dialog_margin"
            android:layout_marginStart="@dimen/modify_scores_dialog_margin"
            android:textColor="@color/teamTwo"/>

        <TextView
            android:id="@+id/team_two_increment"
            style="@style/modify_score_operator_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/modify_scores_dialog_margin"
            android:layout_marginStart="@dimen/modify_scores_dialog_margin"
            android:text="@string/increment_text"/>
    </LinearLayout>


</RelativeLayout>